<%if @user.errors%>
<%@user.errors.full_messages.each do |error|%>
<%=error%>
<%end%>
<%end%>

<%= form_for @user do |f| %>
<fieldset>
 <%= f.label :username, "User Name" %>
 <%= f.text_field :username %>
</fieldset>
<fieldset>
 <%= f.label :email, "Email" %>
 <%= f.email_field :email %>
</fieldset>
<%= f.submit %>

<% end %>
