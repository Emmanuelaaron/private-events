<%if @user.errors%>
<%@user.errors.full_messages.each do |error|%>
<div class="alert alert-danger "><%=error %></div>
<%end%>
<%end%>

<div class='p-3 m-3 col-md-6 mx-auto mt-5'>
<h2 class="h2 py-3 mx-auto">Please Sign up</h2>
 <%= form_for @user do |f| %>
 <fieldset class="form-group">
  <%= f.text_field :username ,class:'form-control',placeholder:'User Name', autofocus:true%>
 </fieldset>
 <fieldset class="form-group">
  <%= f.email_field :email ,class:'form-control',placeholder:'Email'%>
 </fieldset>
 <%= f.submit class:'form-control btn btn-primary' %>
 
 <% end %>
<p class="my-3"> Already registered? <%= link_to  "Log in", sessions_new_path %></p>
</div>
