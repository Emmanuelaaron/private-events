
<h2 class="mt-3">Events You Created</h2>
<%if current_user.events.count>0%>
<% current_user.events.each do |event| %>
 <p class="bg-info rounded py-3"> 
  <%= link_to  event.description, event_path(event) ,class:'lead text-light py-5 px-3'%>
 </p>
<% end %>
<%else%>
<p class="lead">You created zero events</p>
<%end%>


<h2> Upcoming events to attend</h2>
<%if current_user and current_user.upcoming_events.count>0%>
 You have <%= pluralize(current_user.upcoming_events.count,'event')%> to attend.
<div class="d-flex flex-column">
  <%@current_user.upcoming_events.each do |event|%>
   <p class="jumbotron d-flex justify-content-between py-2 my-2">
   <span> <%= link_to  event.description, event_path(event) %></span>
   <span> ON: <%=event.event_date.strftime('%FT%T')%></span>
   <span> BY:  <%=event.creator.username.capitalize%></span>
   </p>
  <%end%>
</div>
<%else%>
<p class ="lead">You have no events to attend</p>
<%end%>

<h2>Past Events</h2>
<%if current_user and current_user.past_events.count>0%>
 You have <%= pluralize(current_user.past_events.count,'event')%> past events.
<div class="d-flex flex-column">
  <%@current_user.past_events.each do |event|%>
   <p class="jumbotron d-flex justify-content-between py-2 my-2 alert-danger">
   <span> <%= link_to  event.description, event_path(event) %></span>
   <span> ON: <%=event.event_date%></span>
   <span> BY:  <%=event.creator.username.capitalize%></span>
   </p>
  <%end%>
</div>
<%else%>
<p class ="lead">You have no past events</p>
<%end%>

