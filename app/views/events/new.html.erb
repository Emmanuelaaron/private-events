<h1>Create Event</h1>
<%if @event.errors%>
<%@event.errors.full_messages.each do |error|%>
<%=error%>
<%end%>
<%end%>

<%= form_for @event do |f| %>
<fieldset>
 <%= f.label :description, "Description" %>
 <%= f.text_field :description %>
</fieldset>
<fieldset>
 <%= f.label :event_date, "Event date" %>
 <%= f.date_field :event_date %>
</fieldset>
<%= f.submit %>

<% end %>
